# ===========================================
# AI 加密货币自动交易系统 - Binance 环境变量配置
# ===========================================

# ============================================
# 服务器配置
# ============================================
# Web 服务器监听端口
PORT=3100

# ============================================
# 交易配置
# ============================================
# 交易循环间隔（分钟）
TRADING_INTERVAL_MINUTES=5

# 最大杠杆倍数
MAX_LEVERAGE=10

# 交易策略（conservative, balanced, aggressive）
TRADING_STRATEGY=balanced

# 初始资金（USDT）
INITIAL_BALANCE=2000
ACCOUNT_STOP_LOSS_USDT=50
ACCOUNT_TAKE_PROFIT_USDT=2000
SYNC_CONFIG_ON_STARTUP=true

# ============================================
# 数据库配置
# ============================================
# 使用本地 SQLite: file:./.voltagent/trading.db
# 使用远程 Turso: libsql://your-database.turso.io
DATABASE_URL=file:./.voltagent/trading.db

# ============================================
# Binance API 配置
# ============================================
# Binance API 密钥（必需）
BINANCE_API_KEY=your_api_key_here

# Binance API 密钥（必需）
BINANCE_API_SECRET=your_api_secret_here

# 是否使用 Binance 测试网（true/false）
BINANCE_USE_TESTNET=true

# ============================================
# AI 模型配置
# ============================================
# OpenAI 兼容的 API 密钥（必需）
OPENAI_API_KEY=your_api_key_here

# OpenAI 兼容的 API 基础地址（可选）
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# AI 模型名称（可选，默认使用 deepseek/deepseek-v3.2-exp）
AI_MODEL_NAME=deepseek/deepseek-v3.2-exp

# 账户回撤风控配置
ACCOUNT_DRAWDOWN_WARNING_PERCENT=20
ACCOUNT_DRAWDOWN_NO_NEW_POSITION_PERCENT=30
ACCOUNT_DRAWDOWN_FORCE_CLOSE_PERCENT=50
